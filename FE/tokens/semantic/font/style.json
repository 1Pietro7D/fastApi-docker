            "fontFamily": "{base.font.family.palette.sans}",
            "fontWeight": "{base.font.weight.bold}",
            "fontSize": "clamp({base.font.fluid-size.stat-display.min}, {base.font.fluid-size.stat-display.ideal}, {base.font.fluid-size.stat-display.max})",
            "lineHeight": "{base.font.line-height.tight}"
          },
          "$type": "typography"
        },
        "label-xxs": {
          "$value": {
            "fontFamily": "{base.font.family.palette.sans}",
            "fontWeight": "{base.font.weight.medium}",
            "fontSize": "{base.font.size.xxs}",
            "lineHeight": "{base.font.line-height.tight}"
          },
          "$type": "typography",
          "$comment": "Stile per etichette minuscole, usato nelle StatCard su mobile."
        },
        "heading-sm": {
            "$value": {
                "fontFamily": "{base.font.family.palette.sans}",
                "fontWeight": "{base.font.weight.semibold}",
                "fontSize": "clamp({base.font.fluid-size.fluid-heading-sm.min}, {base.font.fluid-size.fluid-heading-sm.ideal}, {base.font.fluid-size.fluid-heading-sm.max})",
                "lineHeight": "{base.font.line-height.normal}"
            },
            "$type": "typography"
        },
        "calendar-day-header": {
            "$value": {
                "fontFamily": "{base.font.family.palette.sans}",
                "fontWeight": "{base.font.weight.medium}",
                "fontSize": "clamp({base.font.fluid-size.fluid-calendar-day-header.min}, {base.font.fluid-size.fluid-calendar-day-header.ideal}, {base.font.fluid-size.fluid-calendar-day-header.max})",
                "lineHeight": "{base.font.line-height.normal}"
            },
            "$type": "typography"
        },
        "calendar-day-number": {
            "$value": {
                "fontFamily": "{base.font.family.palette.sans}",
                "fontWeight": "{base.font.weight.regular}",
                "fontSize": "clamp({base.font.fluid-size.fluid-calendar-day-number.min}, {base.font.fluid-size.fluid-calendar-day-number.ideal}, {base.font.fluid-size.fluid-calendar-day-number.max})",
                "lineHeight": "{base.font.line-height.normal}"
            },
            "$type": "typography"
        },
        "button-label-medium": {
          "$value": {
            "fontFamily": "{base.font.family.palette.sans}",
