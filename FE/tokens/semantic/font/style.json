            "fontSize": "clamp({base.font.fluid-size.button-label-medium.min}, {base.font.fluid-size.button-label-medium.ideal}, {base.font.fluid-size.button-label-medium.max})",
            "lineHeight": "{base.font.line-height.normal}"
          },
          "$type": "typography"
        },
        "button-label-small": {
          "$value": {
            "fontFamily": "{base.font.family.palette.sans}",
            "fontWeight": "{base.font.weight.medium}",
            "fontSize": "clamp({base.font.fluid-size.button-label-small.min}, {base.font.fluid-size.button-label-small.ideal}, {base.font.fluid-size.button-label-small.max})",
            "lineHeight": "{base.font.line-height.normal}"
          },
          "$type": "typography"
        }
