            "padding": {
                "desktop": { "$value": "{semantic.size.inset.xl}", "$type": "dimension" },
                "tablet": { "$value": "{semantic.size.inset.lg}", "$type": "dimension" },
                "mobile": { "$value": "{semantic.size.inset.md}", "$type": "dimension" }
            },
            "gap": {
                "desktop": { "$value": "{semantic.size.stack.md}", "$type": "dimension" },
                "tablet": { "$value": "{semantic.size.stack.sm}", "$type": "dimension" },
