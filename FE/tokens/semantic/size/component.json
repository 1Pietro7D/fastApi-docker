              "small": {
                "desktop": { "$value": "{base.size.spacing.8}", "$type": "dimension" },
                "tablet": { "$value": "{base.size.spacing.7}", "$type": "dimension" },
                "mobile": { "$value": "{base.size.spacing.6}", "$type": "dimension" }
              }
            }
        }
      }
